{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "jsx": "react-native",
      "strict": true,
      "moduleResolution": "node",
      "allowJs": true,
      "noEmit": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "baseUrl": ".",
      "paths": {
        "~/*": ["./*"]
      },
      "types": ["react", "react-native", "expo"]
    },
    "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
  }
  