{
    "expo": {
      "name": "Hypno-2025",
      "slug": "Hypno-2025-mobile",
      "version": "1.0.0",
      "orientation": "portrait",
      "icon": "./assets/icon.png",
      "userInterfaceStyle": "automatic",
      "splash": {
        "image": "./assets/splash.png",
        "resizeMode": "contain",
        "backgroundColor": "#000000"
      },
      "updates": {
        "fallbackToCacheTimeout": 0,
        "url": "https://u.expo.dev/YOUR_PROJECT_ID" // replace with your Expo project URL
      },
      "assetBundlePatterns": [
        "**/*"
      ],
      "ios": {
        "supportsTablet": true,
        "bundleIdentifier": "com.yourdomain.crthypnomuseum",
        "infoPlist": {
          "NSPhotoLibraryUsageDescription": "This app requires access to your photo library to upload images.",
          "NSCameraUsageDescription": "This app requires camera access for image capture.",
          "UIUserInterfaceStyle": "Automatic"
        }
      },
      "android": {
        "package": "com.yourdomain.crthypnomuseum",
        "permissions": [
          "READ_EXTERNAL_STORAGE",
          "WRITE_EXTERNAL_STORAGE",
          "CAMERA",
          "RECORD_AUDIO"
        ],
        "adaptiveIcon": {
          "foregroundImage": "./assets/adaptive-icon.png",
          "backgroundColor": "#000000"
        }
      },
      "web": {
        "favicon": "./assets/favicon.png"
      },
      "plugins": [
        [
          "expo-image-picker",
          {
            "photosPermission": "This app requires access to your photo library to upload images."
          }
        ],
        "expo-media-library"
      ]
    }
  }
  